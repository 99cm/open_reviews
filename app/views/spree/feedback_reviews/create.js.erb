<% if @feedback_review.valid? %>
  $("div#feedback_review_<%= @review.id %>").html("<%= escape_javascript(render('summary', review: @review)) %>");
<% else %>
  $("div#feedback_review_<%= @review.id %>").html("<%= escape_javascript(render('form', review: @review)) %>");
<% end %>
$(document).ready(function() {
  $("div#feedback_review_<%= @review.id %>").find('.star').rating({
    required: true
  });
});